participant ":Tournoi" as v <<View>>
participant ":Match" as m
participant ":Controller" as c <<controller>>


activate u
u -> v :setPlayer1(n: String)
activate v
deactivate v
u -> v :setPlayer2(n: String)
activate v
deactivate v
u -> v :setScore(s: String)
activate v
deactivate v
